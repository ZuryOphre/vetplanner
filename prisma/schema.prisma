datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Owner {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  phone      String
  address    String
  pets       Pet[]
}

model Pet {
  id          Int      @id @default(autoincrement())
  name        String
  age         Int
  diagnosis   String
  instructions String
  observations String?
  admission   DateTime
  discharge   DateTime?
  ownerId     Int
  owner       Owner    @relation(fields: [ownerId], references: [id])
  appointments  Appointment[]
}

model Appointment {
  id           Int      @id @default(autoincrement())
  date         DateTime
  veterinarian String
  petId        Int
  pet          Pet      @relation(fields: [petId], references: [id])
}
